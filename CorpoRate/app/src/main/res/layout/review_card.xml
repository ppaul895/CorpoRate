<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entireReviewCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">

                <TextView
                    android:id="@+id/reviewUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:textColor="@color/MatteCharcoal"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/avgRatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:secondaryProgressTint="#00000000"
                    android:rating="0.0"
                    android:stepSize="0.01"
                    android:theme="@style/Color2RatingBarStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/numOfLikesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingEnd="3dp"
                        android:text=""
                        android:textColor="@color/MatteCharcoal"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ToggleButton
                        android:id="@+id/heartLikeButton"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/toggle_selector" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reviewSubRatingsTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="fill_horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ethics"
                    android:textSize="12sp"
                    android:paddingRight="5dp"
                    android:textColor="@color/MatteCharcoal" />

                <TextView
                    android:id="@+id/ethicsRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.66"
                    android:textSize="12sp"
                    android:textColor="@color/Flare" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Environmental"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/MatteCharcoal" />

                <TextView
                    android:id="@+id/environmentalRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.21"
                    android:textSize="12sp"
                    android:textColor="@color/Flare" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leadership"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/MatteCharcoal" />

                <TextView
                    android:id="@+id/leadershipRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.21"
                    android:textSize="12sp"
                    android:textColor="@color/Flare" />
            </LinearLayout>

    <LinearLayout
        android:id="@+id/reviewSubRatingsBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="fill_horizontal"
        android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wage Equality"
                android:textSize="12sp"
                android:paddingRight="5dp"
                android:textColor="@color/MatteCharcoal" />

            <TextView
                android:id="@+id/wageEqualityRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.21"
                android:textSize="12sp"
                android:textColor="@color/Flare" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working Conditions"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/MatteCharcoal" />

            <TextView
                android:id="@+id/workingConditionsRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.21"
                android:textSize="12sp"
                android:textColor="@color/Flare" />
    </LinearLayout>

            <TextView
                android:id="@+id/reviewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:maxLines="4"
                android:text=""
                android:textColor="@color/MatteCharcoal"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/reviewCompanyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text=""
                    android:textColor="@color/MatteCharcoal"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/reviewEditClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableStart="@drawable/small_edit_icon"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/MatteCharcoal"
                    android:text="Edit"
                    android:textAllCaps="true"
                    android:textColor="@color/MatteCharcoal"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

</com.google.android.material.card.MaterialCardView>