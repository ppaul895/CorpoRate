<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/company_add_review_background"
    android:padding="20dp"
    android:elevation="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addReviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Review"
        android:includeFontPadding="false"
        android:textColor="@color/Milk"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Environmental:"
                android:textColor="@color/Milk"
                android:layout_weight="1"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/addReviewEnvironmentalInput"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="0.0"
                android:secondaryProgressTint="#00000000"
                android:isIndicator="false"
                android:stepSize="0.5"
                android:theme="@style/Color1RatingBarStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ethics:"
                android:layout_weight="1"
                android:textColor="@color/Milk"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/addReviewEthicsInput"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="0.0"
                android:secondaryProgressTint="#00000000"
                android:isIndicator="false"
                android:stepSize="0.5"
                android:theme="@style/Color1RatingBarStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Leadership:"
                android:layout_weight="1"
                android:textColor="@color/Milk"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/addReviewLeadershipInput"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="0.0"
                android:secondaryProgressTint="#00000000"
                android:isIndicator="false"
                android:stepSize="0.5"
                android:theme="@style/Color1RatingBarStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wage Equality:"
                android:layout_weight="1"
                android:textColor="@color/Milk"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/addReviewWageEqualityInput"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="0.0"
                android:secondaryProgressTint="#00000000"
                android:isIndicator="false"
                android:stepSize="0.5"
                android:theme="@style/Color1RatingBarStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp"
                android:text="Working Conditions:"
                android:layout_weight="1"
                android:textColor="@color/Milk"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/addReviewWorkingConditionsInput"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="0.0"
                android:secondaryProgressTint="#00000000"
                android:isIndicator="false"
                android:stepSize="0.5"
                android:theme="@style/Color1RatingBarStyle" />

        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/addReviewTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Write your review here..."
        android:gravity="top"
        android:elevation="15dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#FFFF"
        android:textColorHint="#BF38424B"
        android:textColor="@color/MatteCharcoal"
        android:textSize="14sp"
        android:scrollHorizontally="false"
        android:lines="6"
        android:maxLines="6"
        android:singleLine="true"
        android:scrollbars="vertical"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textColorHighlight="#D3D3D3"/>

    <TextView
        android:id="@+id/addReviewDeleteClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/Flare"
        android:text="Delete Review"
        android:textAllCaps="true"
        android:visibility="visible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/cancelAddReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_background"
            android:text="Cancel"
            android:textColor="@color/Milk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/submitAddReviewButton"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/submitAddReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_background"
            android:text="Add"
            android:textColor="@color/Milk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancelAddReviewButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>